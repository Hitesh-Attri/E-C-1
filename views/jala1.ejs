    <div style="margin-left:25%">
        <div class="w3-container w3-teal">
            <%- include('../views/partials/jalaHeader'); %>
        </div>

        <div class="w3-container">
            
            <form  method="post" >
              <div class="row mt-3">
                  <div class="form-group col-md-3">
                      <label for="firstName">First Name</label>
                      <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name">
                  </div>
                  <div class="form-group col-md-3">
                      <label for="lastName">Last Name</label>
                      <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name">
                  </div>
                  <div class="form-group col-md-3">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="inputEmail4"  placeholder="Email">
                  </div>

              </div>

                <div class="row mt-3">
                
                  <div class="form-group col-md-3">
                    <label for="mobileNumber">Mobile Number</label>
                    <input type="number" maxlength="10" class="form-control" id="mobileNumber" placeholder="Mobile Number">
                  </div>
                  <div class="form-group col-md-3">
                    <label for="dateofBirth">Date Of Birth</label>
                    <input type="date" class="form-control" id="dateofBirth" placeholder="Date Of Birth">
                  </div>
                  <div style="flex-direction: row;" class="form-group col-md-3">
                    <p>Select Gender: </p>
                    <input type="radio" id="maleRadio" name="gender" value="male" checked>
                    <label for="maleRadio">Male</label><br>

                    <input type="radio" id="femaleRadio" name="gender" value="female">
                    <label for="femaleRadio">Female</label><br>
                  </div>
                  </div>
                

                  <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <textarea class="form-control" id="inputAddress" placeholder="Enter your address"></textarea>
                  </div>

                  <div class="row mt-3">
               
                  <div class="form-group col-md-3">
                    <label for="inputCountry">Country</label>
                    <select id="inputCountry" class="form-control">
                      <option selected>counrty 1</option>
                      <option>counrty 2</option>
                      <option>counrty 3</option>
                      <option>counrty 4</option>
                      <option>counrty 5</option>
                      <option>counrty 6</option>
                    </select>
                  </div>

                  <div class="form-group col-md-3">
                    <label for="inputState">City</label>
                    <select id="inputState" class="form-control">
                      <option selected>City 1</option>
                      <option>City 2</option>
                      <option>City 3</option>
                      <option>City 4</option>
                      <option>City 5</option>
                      <option>City 6</option>
                    </select>
                  </div>
                </div>
                
                <h3 class="mt-3">Skills</h3>
                  <div id="skillsCheckBox" class="checkbox-grid" >

                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="value1" id="value1">
                        <label class="form-check-label" for="value1">AWS</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="value2" id="value2">
                        <label class="form-check-label" for="value2">DevOps</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="value3" id="value3">
                        <label class="form-check-label" for="value3">Full stack Developer</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="value4" id="value4">
                        <label class="form-check-label" for="value4">Middleware</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="value5" id="value5">
                        <label class="form-check-label" for="value5">QA-Automation</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="value6" id="value6">
                        <label class="form-check-label" for="value6">WebServices</label>
                      </div>
                  </div>
                
                <button type="submit" class="btn btn-primary mt-3">save </button>
                <button  class="btn btn-primary mt-3" onclick="clearForm()">cancel </button>
            </form>

        </div>

    </div>

